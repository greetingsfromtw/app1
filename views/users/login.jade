extends ../layout

block content

  .row(style='padding-top:50px;')
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          h3.panel-title 使用者登入
        .panel-body
          form(role="form" action="/apis/login" method = "POST")
            fieldset
              .form-group
                label #{namealert}
                input.form-control(placeholder='輸入帳號', name='accountname', type='text', autofocus='',
                value= '#{tempname}')
              .form-group
                label #{pwdalert}
                input.form-control(placeholder='輸入密碼', name='password', type='password')
              .checkbox
                label
                  input(name='remember', type='checkbox', value='Remember Me')
                  | 記住我
                
               button.btn.btn-success.btn-block(type='submit') 登入

      .panel
        p 新使用者嗎?
         a(href='/users/register' style="padding:10px") 註冊
