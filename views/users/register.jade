extends ../layout/basic

block content

  .row(style='padding-top:50px;')
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          h3.panel-title 使用者註冊
        .panel-body
          form(role="form" action="/apis/register" method = "POST")
            fieldset
              .form-group
                label #{namealert}
                input.form-control(placeholder='輸入帳號', name='accountname', type='text', autofocus='',
                value= '#{tempname}')
              .form-group
                label #{pwdalert}
                input.form-control(placeholder='輸入密碼', name='password', type='password',
                value= '')
                
                label
                
                button.btn.btn-success.btn-block(type='submit') 註冊
      .panel
        h4 已有帳號?
         a(href='/users/login' style="padding:10px") 登入
